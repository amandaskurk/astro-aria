---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import SquareLines from "../components/square-lines.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basics -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Favicon (AS) -->
    <!-- IMPORTANT: favicon.ico must live in /public -->
    <link rel="icon" href="/favicon.ico" />

    <!-- Prevent dark-mode flash -->
    <script is:inline>
      if (typeof Storage !== "undefined") {
        if (localStorage.getItem("dark_mode") === "true") {
          document.documentElement.classList.add("dark");
        }
      }
    </script>

    <!-- Global styles -->
    <style>
      .prose img {
        border-radius: 20px;
      }
    </style>

    <!-- Main CSS -->
    <link rel="stylesheet" href="/assets/css/main.css" />

    <!-- Optional injected head content -->
    <Fragment set:html={import.meta.env.HEADER_INJECT} />
  </head>

  <body class="antialiased bg-white dark:bg-neutral-950">
    <!-- Decorative background -->
    <SquareLines />

    <!-- Navigation -->
    <Header />

    <!-- Page content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Main JS -->
    <script src="/assets/js/main.js"></script>

    <!-- Optional injected footer content -->
    <Fragment set:html={import.meta.env.FOOTER_INJECT} />
  </body>
</html>
