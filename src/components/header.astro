---
const nav = [
  { label: "Home", href: "/" },
  { label: "Writing", href: "#writing" },
  { label: "Connect", href: "#connect" },
];
---

<header class="sticky top-0 z-50">
  <div class="pointer-events-none absolute inset-x-0 top-0 h-20 bg-gradient-to-b from-white/90 to-transparent dark:from-neutral-950/90"></div>

  <div class="relative mx-auto w-full max-w-6xl px-6">
    <div class="mt-4 rounded-3xl border border-neutral-200/70 dark:border-neutral-800/70 bg-white/70 dark:bg-neutral-950/60 backdrop-blur-xl shadow-sm">
      <div class="flex items-center justify-between px-4 py-3 md:px-5">
        <!-- Logo -->
        <a href="/" class="group flex items-center gap-3">
          <!-- AS monogram -->
          <span
            class="relative inline-flex h-10 w-10 items-center justify-center rounded-full
                   border border-neutral-200 dark:border-neutral-800
                   bg-white/70 dark:bg-neutral-950/60
                   shadow-sm
                   transition duration-300
                   group-hover:-translate-y-0.5"
            aria-label="Amanda Skurkovich"
          >
            <!-- subtle glow on hover -->
            <span
              class="absolute inset-0 -z-10 rounded-full blur-xl opacity-0 transition duration-300
                     bg-gradient-to-tr from-rose-200 via-fuchsia-200 to-sky-200
                     dark:from-rose-900/25 dark:via-fuchsia-900/20 dark:to-sky-900/20
                     group-hover:opacity-60"
            ></span>

            <span class="text-[13px] font-semibold tracking-[0.18em] text-neutral-900 dark:text-white">
              AS
            </span>
          </span>

          <!-- Wordmark -->
          <div class="leading-tight">
            <div class="flex items-center gap-2">
              <span class="text-sm font-semibold text-neutral-900 dark:text-white">
                Amanda Skurkovich
              </span>
              <span class="hidden md:inline-block h-[3px] w-[3px] rounded-full bg-neutral-300 dark:bg-neutral-700"></span>
              <span class="hidden md:inline-block text-xs text-neutral-500 dark:text-neutral-400">
                quiet luxury, sharp thinking
              </span>
            </div>

            <span class="block text-[11px] text-neutral-500 dark:text-neutral-400">
              Finance × AI governance × Policy
            </span>
          </div>
        </a>

        <!-- Desktop nav -->
        <nav class="hidden md:flex items-center gap-2">
          {nav.map((item) => (
            <a
              href={item.href}
              class="group relative rounded-full px-3 py-2 text-sm text-neutral-600 dark:text-neutral-300
                     hover:text-neutral-900 dark:hover:text-white transition"
            >
              {item.label}
              <span
                class="absolute left-3 right-3 -bottom-0.5 h-px origin-left scale-x-0 transition duration-300
                       bg-gradient-to-r from-transparent via-neutral-300 to-transparent
                       dark:via-neutral-700
                       group-hover:scale-x-100"
              ></span>
            </a>
          ))}

          <div class="mx-2 h-6 w-px bg-neutral-200 dark:bg-neutral-800"></div>

          <a
            href="/resume.pdf"
            class="rounded-full border border-neutral-200 dark:border-neutral-800 px-4 py-2 text-sm
                   bg-white/60 dark:bg-neutral-950/40
                   text-neutral-800 dark:text-neutral-200
                   hover:shadow-sm transition"
          >
            Resume
          </a>

          <a
            href="#connect"
            class="rounded-full px-4 py-2 text-sm font-semibold text-white
                   bg-neutral-900 hover:bg-neutral-800
                   dark:bg-white dark:text-neutral-950 dark:hover:bg-neutral-100
                   transition shadow-sm"
          >
            Let’s connect
          </a>
        </nav>

        <!-- Mobile menu button -->
        <button
          id="menuBtn"
          class="md:hidden inline-flex items-center justify-center h-10 w-10 rounded-full
                 border border-neutral-200 dark:border-neutral-800
                 bg-white/60 dark:bg-neutral-950/40
                 text-neutral-700 dark:text-neutral-200
                 hover:shadow-sm transition"
          aria-label="Open menu"
          aria-expanded="false"
          aria-controls="mobileMenu"
          type="button"
        >
          ☰
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile drawer -->
  <div id="mobileMenu" class="fixed inset-0 z-50 hidden">
    <div id="menuBackdrop" class="absolute inset-0 bg-black/30"></div>

    <div
      class="absolute right-0 top-0 h-full w-[88%] max-w-sm
             bg-white dark:bg-neutral-950
             border-l border-neutral-200 dark:border-neutral-800
             shadow-2xl"
      role="dialog"
      aria-modal="true"
    >
      <!-- Side header with matching monogram -->
      <div class="p-6 border-b border-neutral-200 dark:border-neutral-800">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <span
              class="inline-flex h-11 w-11 items-center justify-center rounded-full
                     border border-neutral-200 dark:border-neutral-800
                     bg-white/70 dark:bg-neutral-950/60 shadow-sm"
            >
              <span class="text-[13px] font-semibold tracking-[0.18em]">AS</span>
            </span>
            <div>
              <p class="text-sm font-semibold">Amanda Skurkovich</p>
              <p class="text-xs text-neutral-500 dark:text-neutral-400">Finance × AI × Policy</p>
            </div>
          </div>

          <button
            id="closeMenuBtn"
            class="inline-flex items-center justify-center h-10 w-10 rounded-full
                   border border-neutral-200 dark:border-neutral-800
                   bg-white/60 dark:bg-neutral-950/40
                   hover:shadow-sm transition"
            aria-label="Close menu"
            type="button"
          >
            ✕
          </button>
        </div>
      </div>

      <div class="p-6 space-y-3">
        {nav.map((item) => (
          <a
            href={item.href}
            class="block rounded-2xl border border-neutral-200 dark:border-neutral-800
                   bg-white/60 dark:bg-neutral-950/40
                   px-4 py-3 text-sm text-neutral-800 dark:text-neutral-200
                   hover:shadow-sm transition"
          >
            {item.label}
          </a>
        ))}

        <div class="pt-2 space-y-3">
          <a
            href="/resume.pdf"
            class="block text-center rounded-2xl border border-neutral-200 dark:border-neutral-800
                   bg-white/60 dark:bg-neutral-950/40
                   px-4 py-3 text-sm font-semibold hover:shadow-sm transition"
          >
            View Resume
          </a>

          <a
            href="#connect"
            class="block text-center rounded-2xl px-4 py-3 text-sm font-semibold text-white
                   bg-neutral-900 hover:bg-neutral-800
                   dark:bg-white dark:text-neutral-950 dark:hover:bg-neutral-100
                   transition shadow-sm"
          >
            Let’s connect
          </a>
        </div>

        <p class="pt-6 text-xs text-neutral-500 dark:text-neutral-400">
          Open to thoughtful conversations, networking, and collaboration.
        </p>
      </div>
    </div>
  </div>

  <!-- Tiny JS to toggle the drawer -->
  <script is:inline>
    const menuBtn = document.getElementById("menuBtn");
    const closeBtn = document.getElementById("closeMenuBtn");
    const menu = document.getElementById("mobileMenu");
    const backdrop = document.getElementById("menuBackdrop");

    function openMenu() {
      menu.classList.remove("hidden");
      menuBtn?.setAttribute("aria-expanded", "true");
    }

    function closeMenu() {
      menu.classList.add("hidden");
      menuBtn?.setAttribute("aria-expanded", "false");
    }

    menuBtn?.addEventListener("click", openMenu);
    closeBtn?.addEventListener("click", closeMenu);
    backdrop?.addEventListener("click", closeMenu);
  </script>
</header>
